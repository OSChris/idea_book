!!!
%html
  %head
    %title IdeaBook
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header.page-header
      %h1 
        Idea Book
        %small give me all the ideas
      %nav.navbar.navbar-default
        %ul.nav.navbar-nav
          %li= link_to "Home", ideas_path
        %ul.nav.navbar-nav.pull-right
          - if user_signed_in?
            %li= link_to "Hello #{current_user.full_name}", edit_user_registration_path
            %li= link_to "Sign Out", destroy_user_session_path, method: :delete
          - else
            %li= link_to "Sign In", new_user_session_path
    .container
      - if flash[:notice]
        .alert.alert-success
          = flash[:notice] 
      - elsif flash[:alert] 
        .alert.alert-danger
          = flash[:alert]
      = yield

